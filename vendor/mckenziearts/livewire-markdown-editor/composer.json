{
  "name": "mckenziearts/livewire-markdown-editor",
  "description": "GitHub-style markdown editor for Laravel with Livewire and Alpine.js",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "Laravel",
    "livewire",
    "markdown"
  ],
  "authors": [
    {
      "name": "Arthur Monney",
      "email": "monneylobe@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.3",
    "codeat3/blade-phosphor-icons": "^2.3",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0",
    "spatie/commonmark-shiki-highlighter": "^2.5",
    "livewire/livewire": "^3.6",
    "league/commonmark": "^2.0"
  },
  "require-dev": {
    "laravel/pint": "^1.25.0",
    "mockery/mockery": "^1.6",
    "orchestra/testbench": "^10.6.0",
    "pestphp/pest": "^3.8.4",
    "pestphp/pest-plugin-type-coverage": "^3.6.1",
    "phpstan/phpstan": "^2.1.27",
    "rector/rector": "^2.1.7"
  },
  "autoload": {
    "psr-4": {
      "Mckenziearts\\LivewireMarkdownEditor\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "refactor": "rector",
    "test:refactor": "rector --dry-run",
    "lint": "pint",
    "test:lint": "pint --test",
    "test:types": "phpstan analyse --ansi",
    "test:type-coverage": "pest --type-coverage --min=100",
    "test:unit": "pest"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mckenziearts\\LivewireMarkdownEditor\\LivewireMarkdownEditorServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
